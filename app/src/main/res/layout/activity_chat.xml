<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jikexueyuan.baidumap.ChatActivity">

   <LinearLayout
       android:id="@+id/ll_connect"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <EditText
           android:id="@+id/et_ip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="10.0.2.2"/>
       <Button
           android:id="@+id/btn_connect"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="连接"/>
       </LinearLayout>

     <TextView
         android:id="@+id/tv_show_content"
         android:layout_below="@+id/ll_connect"
         android:layout_above="@+id/ll_send"
         android:layout_width="fill_parent"
         android:padding="10dp"
         android:text="聊天信息"
         android:textSize="16sp"
         android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="39.904965:116.327764"/>
        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"/>
    </LinearLayout>
</RelativeLayout>
